<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv0"
                android:layout_weight="0.0"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="ID  :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_weight="0.2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TextView"
                android:visibility="gone"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv1"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Restaurant Name :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_weight="0.0"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv2"
                android:layout_weight="0.0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Owner  :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv3"
                android:layout_weight="0.5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Mobile No :"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv4"
                android:layout_weight="0.5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="City  :"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv5"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv6"
                android:layout_weight="0.5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Locality  :"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv7"
                android:layout_weight="0.5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Lat  :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv8"
                android:layout_weight="0.5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Long  :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv9"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cuisines:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvcuisines"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="TextView"
                android:visibility="gone"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/newfeild"
                android:layout_weight="0.5"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Business requirements:"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/txtnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/newfeild1"
                android:layout_weight="0.5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/txtnew1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAddRecord"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/login_button"
                android:text="Add Meeting" />

            <Button
                android:id="@+id/btnViewMeeting"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="view Meeting" />

        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>